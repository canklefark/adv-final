---
const { tabData, ariaLabel, activeTabName } = Astro.props;
---

<nav class="tab-list | flex" aria-label={ariaLabel}>
  {
    tabData.map((data) => (
      <a
        class="ff-body uppercase text-dark fw-bold"
        href={data.url}
        data-active-tab={activeTabName === data.name ? 'true' : 'false'}
        data-image={`${data.name.toLowerCase()}-image`}>
        {data.name}
      </a>
    ))
  }
</nav>

<style>
  .tab-list {
    --gap: 0;
  }

  a {
    position: relative;
    text-align: center;
    line-height: 1.2;
    background-color: var(--clr-base);
    width: 100%;
    padding: var(--space-s) var(--space-m);
    border-radius: 9px 9px 0 0;
    box-shadow: 0px 0px 10px 2px var(--shadow-primary);
    transform: translateY(0.4rem);
    transition: transform 0.3s ease;

    &:hover:not([data-active-tab='true']),
    &:focus-within:not([data-active-tab='true']) {
      transform: translateY(0);
    }

    &:nth-child(1) {
      z-index: 3;
    }

    &:nth-child(2) {
      z-index: 2;
    }

    &:nth-child(3) {
      z-index: 1;
    }

    &[data-active-tab='true'] {
      transform: translateY(0);
      background-color: var(--clr-base-l-1);
      box-shadow: 0px 0px 10px 4px var(--shadow-primary);
      z-index: 4;
    }
  }

  @media (max-width: 35rem) {
    a {
      padding: var(--space-s) var(--space-s);
      font-size: 14px;
    }
  }
</style>
