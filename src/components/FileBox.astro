---
const { name, desc } = Astro.props;
---

<article id={`${name}-tab`}>
  <div class="text-wrapper flex flex-column">
    <h2 class="fs-2xl text-accent">{name}</h2>
    <p class="text-dark">{desc}</p>
  </div>
</article>

<style>
  article {
    position: relative;
    background-color: var(--clr-base-l-1);
    padding: var(--space-m);
    border-radius: 0 0 5px 5px;
    width: 100%;
    z-index: 10;
  }

  .text-wrapper {
    background-color: var(--clr-light);
    padding: var(--space-m);
    border-radius: 5px;
    box-shadow: 0px 5px 15px -5px var(--shadow-primary);

    h2 {
      position: relative;
      line-height: 1;

      &::after {
        content: "";
        position: absolute;
        bottom: calc(-1 * calc(var(--space-m) * 0.5));
        left: 0;
        width: 100%;
        height: 1px;
        background-color: hsl(var(--dark) / 0.25);
      }
    }

    p {
      max-width: 50ch;
    }
  }

  @media (max-width: 48rem) {
    .text-wrapper {
      align-items: center;
    }
  }
</style>
