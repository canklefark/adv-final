---
import ContainerPage from "../../layouts/ContainerPage.astro";
import combinedData from "../../data/combinedData.json";
import imgSrc from "../../assets/people/henry-armitage.png";

const pageTitle = "Dr. Henry Armitage";
const page = "People";
const isBordered = true;
---

<ContainerPage
  data={combinedData}
  pageTitle={pageTitle}
  page={page}
  src={imgSrc}
  border={isBordered}
/>

<style>
  img {
    border: 1px solid hsl(var(--base) / 0.2);
    border-radius: var(--radius-m);
  }
</style>
