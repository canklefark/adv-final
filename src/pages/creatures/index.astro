---
import ContainerPage from "../../layouts/ContainerPage.astro";
import combinedData from "../../data/combinedData.json";
import imgSrc from "../../assets/creatures/cthulhu.png";

const pageTitle = "Cthulhu";
const page = "Creatures";
---

<ContainerPage
  data={combinedData}
  pageTitle={pageTitle}
  page={page}
  src={imgSrc}
/>

